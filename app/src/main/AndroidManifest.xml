<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="carlosmuvi.bqsample"
    >

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
      android:allowBackup="true"
      android:name=".BqSampleApp"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme"
      >
    <activity
        android:name=".ui.activities.LoginActivity"
        android:configChanges="orientation|screenSize"
        android:label="@string/title_activity_login"
        >

      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>

    </activity>
    <activity
        android:name=".ui.activities.EbookListActivity"
        android:configChanges="orientation|screenSize"
        android:label="@string/title_activity_ebook_list"
        />
    <activity
        android:name=".ui.activities.EbookDetailsActivity"
        android:configChanges="orientation|screenSize"
        android:label="@string/title_activity_ebook_details"
        />

  </application>

</manifest>
